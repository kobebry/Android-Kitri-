<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guinness"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/prev"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_prev"/>
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="200dp"
        android:layout_height="260dp"
        >
        <ImageView
            android:id="@+id/img01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guinness_lre"
            />
        <ImageView
            android:id="@+id/img02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guinness_lre2"
            />
        <ImageView
            android:id="@+id/img03"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guinness_lre3"
            />
        <ImageView
            android:id="@+id/img04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guinness_lre4"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guinness_lre5"
            />
    </ViewFlipper>
        <ImageButton
            android:id="@+id/next"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_next"/>
    </LinearLayout>


</LinearLayout>
